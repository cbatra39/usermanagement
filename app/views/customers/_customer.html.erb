
<div class="card mb-4" style="width:25rem;" >
  <div class="card-body">
    <h5 class="card-title"><%=customer.name%></h5>
    <p class="card-text">
      Info:  <%=@customer.info%></br>
      Email: <%=@customer.email%>
    </p>
      <%= link_to "Edit", edit_customer_path(@customer),class:"btn btn-secondary mb-3" %> 
      <%= link_to "Delete", @customer,data:{'turbo-method': :delete},class:"btn btn-danger mb-3"%>
      <%= link_to "Back", customer_path, class:"btn btn-dark mb-3 " %>
  </div>
</div>
